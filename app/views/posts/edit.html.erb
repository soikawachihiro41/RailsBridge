<section class="bg-size-cover bg-position-bottom-center bg-repeat-0 py-5" style="background-image: url(assets/img/contacts/bg.svg);">
    <div class="container pt-5 pb-lg-4 pb-xl-5">
        <div class="row pt-md-2 pt-lg-5 pb-2 pb-md-4">
            <div class="col-xxl-4 col-xl-5 col-lg-6 pt-3 mt-3">
                <h1 class="h3 mb-2">投稿を編集しますか?</h1>
                <h2 class="display-1 text-gradient-primary pb-sm-2 pb-md-3 mb-3">Edit & Update!</h2>
                <div class="nav d-block lead pt-lg-5">
                </div>
            </div>
            <div class="col-lg-6 offset-xl-1 offset-xxl-2 pt-3 pt-md-4 pt-lg-3 mt-3">
                <%= form_with model: @post, local: true, class: "needs-validation" do |f| %>
                    <div class="row g-4">
                        <div class="col-sm-6">
                            <%= f.label :title, class: "form-label fs-base" %>
                            <%= f.text_field :title, class: "form-control form-control-lg" %>
                        </div>
                        <div class="col-12 pb-2">
                            <%= f.label :body, class: "form-label fs-base" %>
                            <%= f.text_area :body, class: "form-control form-control-lg", rows: 3 %>
                        </div>
                        <div class="col-sm-6">
                            <%= f.label :url, class: "form-label fs-base" %>
                            <%= f.text_field :url, class: "form-control form-control-lg" %>
                        </div>
                        <div class="col-12 pb-2">
                        <div class="col-12">
                            <%= f.submit "投稿を更新", class: "btn btn-lg btn-primary w-100 w-sm-auto" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
