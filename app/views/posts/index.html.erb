<h1>投稿一覧</h1>

<%= link_to '新規投稿', new_post_path %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td>
          <%= link_to '編集', edit_post_path(post) %> |
          <%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
